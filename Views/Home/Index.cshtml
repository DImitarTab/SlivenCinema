                    {
                        <button class="input" data-screeningtime="@DateTime.Today.AddDays(i)">@DateTime.Today.AddDays(i).DayOfWeek</button>
                    }       *@             
                    <button class="openPopup">+</button>  
                 
        </div>
                <div class="full-panel cards-container" id="loadPartialView">
                </div>         
        <!-- This is the movies panel -->
      </div>
    </section>  
    </div>
   

